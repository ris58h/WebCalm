<idea-plugin>
    <id>ris58h.webcalm</id>
    <name>WebCalm</name>
    <vendor email="ris58h@gmail.com" url="https://github.com/ris58h">Ilya Rodionov</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends optional="true" config-file="plugin-xml.xml">com.intellij.modules.xml</depends>

    <incompatible-with>JavaScript</incompatible-with>
    <incompatible-with>com.intellij.modules.css</incompatible-with>

    <extensions defaultExtensionNs="com.intellij">
        <!-- JavaScript -->
        <fileType
                name="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptFileType"
                language="JavaScript"
                extensions="js"/>
        <lang.parserDefinition
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptSyntaxHighlighter$Factory"/>
        <annotator
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptHighlightingAnnotator"/>
        <lang.findUsagesProvider
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptFindUsagesProvider"/>
        <lang.braceMatcher
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptPairedBraceMatcher"/>
        <lang.commenter
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptCommenter"/>
        <lang.foldingBuilder
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptFoldingBuilder"/>
        <lang.psiStructureViewFactory
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptStructureViewFactory"/>
        <codeInsight.lineMarkerProvider
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptRecursiveCallLineMarkerProvider"/>
        <completion.contributor
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.completion.JavaScriptCompletionContributor"/>
        <lang.quoteHandler
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptQuoteHandler"/>
        <targetElementEvaluator
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptTargetElementEvaluator"/>
        <lang.refactoringSupport
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptRefactoringSupportProvider"/>
        <highlightVisitor implementation="ris58h.webcalm.javascript.JavaScriptRainbowVisitor"/>
        <lang.formatter
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.formatting.JavaScriptFormattingModelBuilder"/>
        <!-- CSS -->
        <fileType
                name="CSS"
                implementationClass="ris58h.webcalm.css.CssFileType"
                language="CSS"
                extensions="css"/>
        <lang.parserDefinition
                language="CSS"
                implementationClass="ris58h.webcalm.css.CssParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="CSS"
                implementationClass="ris58h.webcalm.css.CssSyntaxHighlighter$Factory"/>
        <lang.braceMatcher
                language="CSS"
                implementationClass="ris58h.webcalm.css.CssPairedBraceMatcher"/>
        <lang.commenter
                language="CSS"
                implementationClass="ris58h.webcalm.css.CssCommenter"/>
        <lang.foldingBuilder
                language="CSS"
                implementationClass="ris58h.webcalm.css.CssFoldingBuilder"/>
        <lang.psiStructureViewFactory
                language="CSS"
                implementationClass="ris58h.webcalm.css.CssStructureViewFactory"/>
        <annotator
                language="CSS"
                implementationClass="ris58h.webcalm.css.CssHighlightingAnnotator"/>
        <lang.ast.factory
                language="CSS"
                implementationClass="ris58h.webcalm.css.CssASTFactory"/>
        <lang.findUsagesProvider
                language="CSS"
                implementationClass="ris58h.webcalm.css.CssFindUsagesProvider"/>
        <completion.contributor
                language="CSS"
                implementationClass="ris58h.webcalm.css.completion.CssCompletionContributor"/>
        <lang.quoteHandler
                language="CSS"
                implementationClass="ris58h.webcalm.css.CssQuoteHandler"/>
        <targetElementEvaluator
                language="CSS"
                implementationClass="ris58h.webcalm.css.CssTargetElementEvaluator"/>
        <lang.refactoringSupport
                language="CSS"
                implementationClass="ris58h.webcalm.css.CssRefactoringSupportProvider"/>
        <renameInputValidator implementation="ris58h.webcalm.css.CssRenameInputValidator"/>
        <lang.namesValidator
                language="CSS"
                implementationClass="ris58h.webcalm.css.CssNamesValidator"/>
        <highlightVisitor implementation="ris58h.webcalm.css.CssRainbowVisitor"/>
        <lang.formatter
                language="CSS"
                implementationClass="ris58h.webcalm.css.formatting.CssFormattingModelBuilder"/>
    </extensions>

    <extensionPoints>
        <extensionPoint
                name="javascript.relatedScriptsProcessor"
                interface="ris58h.webcalm.javascript.RelatedScriptsProcessor"/>
    </extensionPoints>
</idea-plugin>