<idea-plugin>
    <id>ris58h.webcalm</id>
    <name>WebCalm</name>
    <vendor email="ris58h@gmail.com" url="https://github.com/ris58h">Ilya Rodionov</vendor>
    <description><![CDATA[
        Adds basic support for the JavaScript language: highlighting, navigation, completion, etc.
        <br>
        <br>
        WARNING: Install it only if your IDE doesn't already support JavaScript. The plugin is still in development so something may not work properly.
        <br>
        <br>
        Features:
        <ul>
            <li>Syntax highlighting.</li>
            <li>Code folding.</li>
            <li>Structure view.</li>
            <li>Go to declaration.</li>
            <li>Find usages.</li>
            <li>Refactor/Rename.</li>
            <li>Language injections in 'script' tags and event handler attributes.</li>
        </ul>
        <br>
        Planned features:
        <ul>
            <li>CSS language support.</li>
        </ul>
        <br>
        Not planned features:
        <ul>
            <li>Template engines support.</li>
            <li>Frameworks support.</li>
            <li>Other JavaScript based languages support.</li>
        </ul>
      ]]></description>

    <idea-version since-build="201.6668.113"/>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- HTML -->
        <multiHostInjector implementation="ris58h.webcalm.html.HtmlAttributeJavaScriptInjector"/>
        <multiHostInjector implementation="ris58h.webcalm.html.HtmlScriptTagJavaScriptInjector"/>
<!--        <multiHostInjector implementation="ris58h.webcalm.html.HtmlStyleAttributeCssInjector"/>-->
<!--        <multiHostInjector implementation="ris58h.webcalm.html.HtmlStyleTagCssInjector"/>-->
        <!-- JavaScript -->
        <fileType
                name="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptFileType"
                language="JavaScript"
                extensions="js"/>
        <lang.parserDefinition
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptSyntaxHighlighter$Factory"/>
        <annotator
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptHighlightingAnnotator"/>
        <lang.findUsagesProvider
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptFindUsagesProvider"/>
        <lang.braceMatcher
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptPairedBraceMatcher"/>
        <lang.commenter
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptCommenter"/>
        <lang.foldingBuilder
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptFoldingBuilder"/>
        <lang.psiStructureViewFactory
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptStructureViewFactory"/>
