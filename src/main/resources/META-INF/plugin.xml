<idea-plugin>
    <id>ris58h.webcalm</id>
    <name>WebCalm</name>
    <vendor email="ris58h@gmail.com" url="https://github.com/ris58h">Ilya Rodionov</vendor>
    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
  ]]></description>

    <idea-version since-build="201.6668.113"/>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- HTML -->
        <multiHostInjector implementation="ris58h.webcalm.html.HtmlAttributeJavaScriptInjector"/>
        <multiHostInjector implementation="ris58h.webcalm.html.HtmlScriptTagJavaScriptInjector"/>
        <multiHostInjector implementation="ris58h.webcalm.html.HtmlStyleAttributeCssInjector"/>
        <multiHostInjector implementation="ris58h.webcalm.html.HtmlStyleTagCssInjector"/>
        <!-- JavaScript -->
        <fileType
                name="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptFileType"
                language="JavaScript"
                extensions="js"/>
        <lang.parserDefinition
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptSyntaxHighlighter$Factory"/>
        <annotator
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptHighlightingAnnotator"/>
        <lang.findUsagesProvider
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptFindUsagesProvider"/>
        <lang.braceMatcher
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptPairedBraceMatcher"/>
        <lang.commenter
                language="JavaScript"
                implementationClass="ris58h.webcalm.javascript.JavaScriptCommenter"/>
        <!-- CSS -->
        <fileType
                name="CSS"
                implementationClass="ris58h.webcalm.css.CssFileType"
                language="CSS"
                extensions="css"/>
        <lang.parserDefinition
                language="CSS"
                implementationClass="ris58h.webcalm.css.CssParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="CSS"
                implementationClass="ris58h.webcalm.css.CssSyntaxHighlighter$Factory"/>
        <lang.braceMatcher
                language="CSS"
                implementationClass="ris58h.webcalm.css.CssPairedBraceMatcher"/>
    </extensions>
</idea-plugin>