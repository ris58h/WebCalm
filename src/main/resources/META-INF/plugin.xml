<!--        <lang.foldingBuilder-->
<!--                language="CSS"-->
<!--                implementationClass="ris58h.webcalm.css.CssFoldingBuilder"/>-->
    </extensions>

    <extensionPoints>
        <extensionPoint
                name="javascript.relatedScriptsProcessor"
                interface="ris58h.webcalm.javascript.RelatedScriptsProcessor"/>
    </extensionPoints>
</idea-plugin>